.well.well-small
  .pull-right
    = link_to "Reset filters", reset_filterrific_students_path, :class => 'btn btn-small'
  = page_entries_info students, :model => 'student'
  = render_filterrific_spinner

%table.table
  %tr
    %th Name
    %th Email
    %th Country
    %th Registered at
  - students.each do |student|
    %tr
      %td= link_to student.full_name, student_path(student)
      %td= student.email
      %td= student.country_name
      %td= student.created_at.to_date.to_s(:long)

= will_paginate students
